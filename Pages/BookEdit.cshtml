@using Microsoft.AspNetCore.Mvc.ViewFeatures;
@model LibraryManagementSystemHtmx.Pages.IndexModel;

<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
  <div class="modal-content p-3" style="text-align: left;">
    <form
      method="post"
      asp-page="Index"
      asp-page-handler="SaveBook"
    >
      <input type="hidden" asp-for="currentSelectedBook.Id"></input>
      <div class="mb-3">
        <label asp-for="currentSelectedBook.Isbn" class="form-label">ISBN</label>
        <input class="form-control" type="text" asp-for="currentSelectedBook.Isbn" />
      </div>
      <div class="mb-3">
        <label asp-for="currentSelectedBook.Title" class="form-label">Title</label>
        <input class="form-control" type="text" asp-for="currentSelectedBook.Title" />
      </div>
      <div class="mb-3">
        <label asp-for="currentSelectedBook.Author" class="form-label">Author</label>
        <input class="form-control" type="text" asp-for="currentSelectedBook.Author" />
      </div>
      <div class="mb-3">
        <label asp-for="currentSelectedBook.Description" class="form-label">Description</label>
        <textarea class="form-control" asp-for="currentSelectedBook.Description"></textarea>
      </div>
      <button 
        type="submit" 
        class="btn btn-primary"
      >Save</button>
    </form>
  </div>
</div>